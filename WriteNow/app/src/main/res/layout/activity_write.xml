<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/keyColor_1"
    tools:context="hnb.team.writenow.View.WriteActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:id="@+id/cardLayout"
            app:layout_widthPercent="100%"
            app:layout_aspectRatio="100%"
            android:layout_centerHorizontal="true">

            <ImageView android:id="@+id/cardImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@color/color2"/>

            <TextView android:id="@+id/cardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="CARD TITLE"
                android:textSize="30sp"/>

            <TextView android:id="@+id/cardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardTitle"
                android:layout_centerHorizontal="true"
                android:text="CARD DESCRIPTION\ntyping to Description "
                android:textColor="@android:color/white"
                android:textSize="24sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button android:id="@+id/changeImageButton"
                    android:text="changeImage"
                    style="@style/BasicButtonStyle" />

                <Button android:id="@+id/showBottomSheetButton"
                    style="@style/BasicButtonStyle"
                    android:text="Show BottomSheet"
                    android:textColor="@android:color/black"/>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <Button android:id="@+id/changeFilterColorButton"
                    style="@style/BasicButtonStyle"
                    android:layout_centerHorizontal="true"
                    android:text="changeFilterColor"
                    android:textColor="@android:color/black"/>

                <Button android:id="@+id/saveToImageButton"
                    style="@style/BasicButtonStyle"
                    android:layout_centerHorizontal="true"
                    android:text="saveToImage"
                    android:textColor="@android:color/black"/>

        </LinearLayout>

        </LinearLayout>

    </android.support.percent.PercentRelativeLayout>

    <RelativeLayout android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#33FF1F"
        android:orientation="vertical"
        app:behavior_peekHeight="0dp"
        app:behavior_hideable="false"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <android.support.v7.widget.RecyclerView android:id="@+id/imageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
